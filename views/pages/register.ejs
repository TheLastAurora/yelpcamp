<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="bg-slate-700 flex h-screen bg-sign no-repeat bg-center bg-cover">
    <main
        class="flex flex-col flex-1 justify-center items-center h-screen flex justify-center items-center backdrop-blur-xs bsolute inset-0 bg-gradient-to-l from-transparent to-black">
        <div class="flex flex-col items-center justify-center bg-ivory p-10 pb-5" id="registration-div">
            <a href="/"><img class="w-24 mb-5" src="/imgs/logo.png" alt="">
            </a>
            <h1 class="text-3xl mb-4">Sign Up</h1>
            <form action="/accounts/register" method="POST" class="mt-10">
                <div class="mb-4">
                    <label for="firstName" class="block text-black font-bold mb-2">First Name:</label>
                    <input type="text" name="first_name" id="firstName"
                        class="w-full px-4 py-2 rounded-lg bg-isabeline text-black font-bold outline-none focus:bg-silver focus:shadow-outline focus:outline-none"
                        required>
                </div>
                <div class="mb-4">
                    <label for="lastName" class="block text-black font-bold mb-2">Last Name:</label>
                    <input type="text" name="last_name" id="lastName"
                        class="w-full px-4 py-2 rounded-lg bg-isabeline text-black font-bold outline-none focus:bg-silver focus:shadow-outline focus:outline-none"
                        required>
                </div>
                <div id="email-div" class="mb-4">
                    <label for="email" class="block text-black font-bold mb-2">Email:</label>
                    <input type="email" name="email" id="email-input"
                        class="w-full px-4 py-2 rounded-lg bg-isabeline text-black font-bold outline-none focus:bg-silver focus:shadow-outline focus:outline-none"
                        required>
                    <% if (locals.emailExists) { %>
                        <p class="visible text-red-500 mt-3" id="email-exists"><b>Email already exists</b></p>
                        <% } else { %>
                            <p class="hidden text-red-500 mt-3" id="email-exists"><b>Email already exists</b></p>
                            <% } %>
                </div>
                <div class="mb-4">
                    <label for="password" class="block text-black font-bold mb-2">Password:</label>
                    <input type="password" name="password" id="password"
                        class="w-full px-4 py-2 rounded-lg bg-isabeline text-black font-bold outline-none focus:bg-silver focus:shadow-outline focus:outline-none"
                        required>
                </div>
                <div class="mb-4">
                    <label for="birthDate" class="block text-black font-bold mb-2">Birth Date:</label>
                    <!-- Change for birthDate  -->
                    <input type="date" name="birth_date" id="birthDate" min="1899-01-01" max="2020-01-01" required
                        class="w-full px-4 py-2 rounded-lg bg-isabeline text-black font-bold outline-none focus:bg-silver focus:shadow-outline focus:outline-none">
                </div>
                <div class="mb-4">
                    <label for="phone" class="block text-black font-bold mb-2">Phone:</label> <!-- Change for phone  -->
                    <input type="text" name="phone" id="phone"
                        class="w-full px-4 py-2 rounded-lg bg-isabeline text-black font-bold outline-none focus:bg-silver focus:shadow-outline focus:outline-none">
                    <div class="flex justify-center">
                        <button
                            class="bg-burnt-siena hover:bg-terracota text-ivory hover:text-white font-bold  py-2 px-4  focus:outline-none focus:shadow-outline mt-10 transition"
                            type="submit">Register</button>
                    </div>
                </div>
            </form>
            <a href="/accounts/login" class="text-sm text-gray-700 hover:text-black">I have an account</a>
        </div>
    </main>
    <script>
        let input = document.querySelector('#email-input');
        input.addEventListener('keyup', () => {
            let el = document.querySelector('#email-exists');
            if (el.classList.contains("visible"))
                el.classList.remove("visible");
            el.classList.add("hidden");
            console.log(el.classList);
        });
    </script>
</body>

</html>